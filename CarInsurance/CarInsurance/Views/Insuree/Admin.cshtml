@model CarInsurance.Models.Insuree
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <!--Card a new bootstrap class where we put our newsletter form in, col-sm/md/lg-12: create 12 columns on small screens like phoen, 10 on midium and 6 on large, mx-auto:margin on xaxis centred so set to auto, shadow:box shadow -->
        <dic class="card-header text-center">
            <h5 class="m-0">Quotes</h5> <!--Set margin on the H5 tag to zero-->
        </dic>
        <div class="card-body">
            @foreach (var insuree in model)
            {
                using (Html.BeginForm())
                {

            <div class="row mb-3">

                <div class="col-2">
                    @insuree.FirstName
                </div>
                <div class="col">
                    @insuree.LastName
                </div>
                <div class="col-4">
                    @insuree.EmailAddress
                </div>
                <div class="col-4">
                    @insuree.Quote
                </div>

            </div>
                }
            }
        </div>
    </div>
</div>
